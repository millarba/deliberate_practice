<h1>Update a Book</h1>

<%= form_tag "/books/#{@book.id}", method:  :put do %>
  <p>Title: <input type="text", name="title", value="<%= @book.title %>"</p>
  <p>Description: <input type="text", name="description", value="<%= @book.description %>"></p>
  <p><input type="submit", text="Update"></p>
<% end %>